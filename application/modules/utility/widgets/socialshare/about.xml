<!DOCTYPE widget SYSTEM "http://schemas.amancms.com/dtd/widget_about.dtd">
<widget>
	<name>SocialShare</name>
	<title>Share via social networks</title>
	<module>utility</module>
	<description>Share links via some popular social networks</description>
	<thumbnail></thumbnail>
	<author>AmanCMS Core Team</author>
	<email>core@amancms.com</email>
	<version>2.0.0</version>
	<license>free</license>
	<params>
		<param name="size">
			<description>Icon size</description>
		</param>
	</params>
	<resources>
		<!-- 
		@since 2.0.8
		@see http://developers.facebook.com/docs/share 
		@see http://twitter.com/goodies/tweetbutton
		@see http://about.digg.com/downloads/button/smart 
		-->
		<resource type="javascript" src="http://static.ak.fbcdn.net/connect.php/js/FB.Share"></resource>
		<resource type="javascript" src="http://platform.twitter.com/widgets.js"></resource>
		<resource type="javascript" src="http://widgets.digg.com/buttons.js"></resource>
	</resources>
</widget>
