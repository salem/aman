<!DOCTYPE widget SYSTEM "http://schemas.amancms.com/dtd/widget_about.dtd">
<widget>
	<name>Countdown</name>
	<title>Countdown</title>
	<module>utility</module>
	<description>Show a countdown to given event</description>
	<thumbnail></thumbnail>
	<author>AmanCMS Core Team</author>
	<email>core@amancms.com</email>
	<version>2.0.0</version>
	<license>free</license>
	<params>
		<param name="event">
			<description>Name of event</description>
		</param>
		<param name="target">
			<description>The date that the event occur. The format is Y-m-d H:i:s</description>
		</param>
	</params>
	<resources>
		<resource type="javascript" src="{APP_STATIC_SERVER}/js/jquery.countdown/jquery.countdown.min.js" />
		<resource type="javascript" src="{APP_STATIC_SERVER}/js/jquery.ui/ui.core.js" />
		<resource type="javascript" src="{APP_STATIC_SERVER}/js/jquery.ui/ui.datepicker.js" />
	</resources>
</widget>
